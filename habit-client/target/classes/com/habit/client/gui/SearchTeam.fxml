<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="250" prefWidth="400" spacing="15" stylesheets="@SearchTeam.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.habit.client.SearchTeamController">
    <Label style="-fx-font-size: 18px;" text="チーム検索（合言葉）" />
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="passcodeField" promptText="合言葉を入力" />
        <Button fx:id="btnSearch" text="検索" />
    </HBox>
    <Label fx:id="resultLabel" style="-fx-text-fill: green;" text="" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnJoin" disable="true" text="参加" />
        <Button fx:id="btnBackHome" text="ホームに戻る" />
    </HBox>
</VBox>
